{
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/((?!assets/|images/|favicon.png|apple-touch-icon.png|og-image.png|manifest.json|version.json|vite.svg).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/index.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        },
        {
            "source": "/(.*)\\.(js|css|png|jpg|svg|ico|json)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}