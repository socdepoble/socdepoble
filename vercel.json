    "rewrites": [
        {
            "source": "/((?!tools/.*).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/index.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/tools/(.*)",
            "headers": [
                {
                    "key": "Clear-Site-Data",
                    "value": "\"*\""
                },
                {
                    "key": "Cache-Control",
                    "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
                }
            ]
        }
    ]
}